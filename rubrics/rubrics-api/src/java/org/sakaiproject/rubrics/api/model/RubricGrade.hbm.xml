<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping
    PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping auto-import="false" >
	<class name="org.sakaiproject.rubrics.api.rubric.RubricGrade"
		table="RUBRIC_GRADE_T">
		<id name="gradeDetailId" column="GRADE_ID" type="long">
			<generator class="native">
				<param name="sequence">RUBRIC_GRADE_S</param>
			</generator>
		</id>

		<property name="assignmentSubmissionId" type="java.lang.String">
			<column name="SUBMISSION_ID" not-null="false" />
		</property>
		<property name="pointsEarned" type="java.lang.Double">
			<column name="POINTES_EARNED" not-null="false" />
		</property>
		<property name="rubricCellId" type="java.lang.Long">
			<column name="RU_CELL_ID" not-null="true" />
		</property>
		<property name="comment" type="java.lang.String">
			<column name="COMMENT" not-null="false" length="255" />
		</property>

	</class>

	<query name="getGradedByCellId">
    	<![CDATA[from org.sakaiproject.rubrics.api.rubric.RubricGrade rubricGrd  
             where rubricGrd.rubricCellId = :rubricCellId]]>
	</query>

	<query name="getGradedByRubricsSubmission">
  	  	<![CDATA[from org.sakaiproject.rubrics.api.rubric.RubricGrade rubricGrd  
             where rubricGrd.assignmentSubmissionId = :assignmentSubmissionId]]>
	</query>

</hibernate-mapping>