<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping
    PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping auto-import="false" >
	
	<class name="org.sakaiproject.rubrics.api.rubric.RubricMappedItem" table="RUBRIC_BY_ITEM">
		<composite-id name="id" class="org.sakaiproject.rubrics.api.rubric.MapId">
    		<key-property name="itemId" column="ITEM_ID" type="long" /> 
    		<key-property name="toolId" column="TOOL_ID" type="java.lang.String" /> 
		</composite-id>
		<property name="rubricId" type="long">
			<column name="RUBRIC_ID" not-null="true" />
		</property>
	</class>
	
</hibernate-mapping>
       